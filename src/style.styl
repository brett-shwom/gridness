/* http://css-tricks.com/snippets/css/better-helvetica/ */
body {
 /*
 font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 
 font-weight: 400;
 */
 font-weight:200;
 font-family: 'Ek Mukta', sans-serif;
 overflow:hidden;
}

table {
 border-collapse:collapse;
 table-layout:fixed;
}

tr {
 height:20px;
 &.frozenRow {
  background-color:red !important
 }
}

td {
 padding-left:2px;
 padding-right:2px;
}

td,th {

 border: 1px solid black;
 width:100px;
 white-space:nowrap;
 text-overflow:ellipsis;

 &.frozenColumn {
  background-color red
 }

}

th {
  padding-left 10px
  padding-right 10px
  text-align center
}

tbody {
 height:200px; 
}


.table-container {
  
  $numberOfRowsToShow = 20
  $headerHeight = 20px + 1px
  $rowHeight = 20px
  
  position:relative;
  width:600px;

  height:$numberOfRowsToShow * $rowHeight + $headerHeight;

  table {
    position:absolute;
    width:100%;
  }
  
  .virtual-scroll-pane {
    position:absolute;
    top:$headerHeight;
    background-color:red; /*helpful for debugging */
    width:100%;
    height:100%;
    opacity:0.5;
    overflow-y:scroll;
  }
  
}